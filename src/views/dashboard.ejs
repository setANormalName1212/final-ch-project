<%- include("partials/header") %> 

<%- include("partials/nav") %>

<section class="d-flex justify-content-center">
    <div class="bg-dark w-25 p-3 m-5 rounded">
        <h2 class="text-white text-center m-3">Add Product</h2>
        <form action="/product/new" method="post" class="">
            <label for="" class="m-3">
                <h3 class="text-white">Title</h3>
                <input type="text" name="title" autocomplete="off">
            </label>
            <label for="" class="m-3">
                <h3 class="text-white">Price</h3>
                <input type="number" name="price" id="" autocomplete="off">
            </label>
            <label for="" class="m-3">
                <h3 class="text-white">Description</h3>
                <input type="text" name="description" autocomplete="off">
            </label>
            <label for="" class="m-3">
                <h3 class="text-white">Stock</h3>
                <input type="number" name="stock" id="" autocomplete="off">
            </label>
            <label class="m-3">
                <h3 class="text-white">Category</h3>
                <input type="text" name="category" autocomplete="off">
            </label>
            <div class="text-center mb-4">
                <button type="submit" class="btn btn-outline-success p-2 mt-3">Add product</button>
            </div>
        </form>
    </div>
</section>

<section>
    <table class="table">
        <thead>
            <tr>
                <th>NÂº</th>
                <th>Title</th>
                <th>Price</th>
                <th>Stock</th>
                <th class="text-center">Operation</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < products.length; i++) { %>
                <tr>
                    <td><%= i + 1 %> </td>
                    <td><%= products[i].title %> </td>
                    <td><%= products[i].price %> </td>
                    <td><%= products[i].stock %> </td>
                    <td class="text-center">
                        <a href="/product/edit/<%= products[i].id %>" class="btn btn-outline-info">Edit product</a>
                        <a href="/product/delete/<%= products[i].id %>" class="btn btn-outline-danger">Delete product</a>
                    </td>
                </tr>
            <% } %> 
        </tbody>
    </table>
</section>

<%- include("partials/footer") %> 