<%- include("partials/header") %> 

<%- include("partials/nav") %> 

<h1 class="text-center mt-5 mb-5">Config</h1>

<section class="w-25 border border-primary ms-5 p-3">
    <form action="/user/edit/<%= user.id %> " method="post" class="form-group row">
        <div>
            <label for="" class="col-sm-2 col-form-label w-100">
                <h2>Name</h2>
                <input type="text" name="name" value="<%= user.name %>" class="w-100">
            </label>
        </div>
        <div class="mt-3">
            <label for="" class="w-100">
                <h2>Email</h2>
                <input type="email" name="email" value="<%= user.email %>" class="w-100">
            </label>
        </div>
        <div class="mt-3 mb-3">
            <label for="" class="w-100">
                <h2>password</h2>
                <input type="password" name="password" class="w-100">
            </label>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="w-75 h-4 btn btn-info rounded">Edit my account</button>
        </div>
    </form>
</section>

<%- include("partials/footer") %> 