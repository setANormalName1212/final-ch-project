<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid mt-1 mb-1 ms-5">
        <div class="">
            <h1 class="navbar-brand">Final project - Coder House</h1>
        </div>
    </div>
</nav>

<%- include("partials/messages") %>

<div class="text-center m-4">
    <button id="button" class="btn btn-dark"></button>
</div>

<article id="art"></article>

<script>
    const login = `
    <div class="d-flex justify-content-center">
        <div class="card bg-primary w-25 p-4 pt-5 rounded">
            <h1 class="h2 text-center text-white">Log In</h1>
            <form action="/user/login" method="POST" class="row p-4 card-body m-1">
                <label class="">
                    <h2 class="h4 text-white">Enter your email</h2>
                    <input type="email" name="email" autocomplete="off">
                </label>
                <label class="mt-3">
                    <h2 class="h4 text-white">Enter your password</h2>
                    <input type="password" name="password" autocomplete="off">    
                </label>
                <div class="text-center">
                    <button type="submit" class="mt-4 p-2 w-75 btn btn-outline-info">Log In</button>
                </div>
            </form>
            <div>
                <a href="/user/recovery" class="h6 text-white">Forgot your password?</a>    
            </div>
        </div>
    </div>
    `
    
    const register = `
    <div class="d-flex justify-content-center">
        <div class="card bg-primary w-25 p-4 pt-5 rounded">
            <h1 class="h2 text-center text-white">Register</h1>
            <form action="/user/register" method="post" class="row p-4 card-body m-1">
                <label>
                    <h2 class="h4 text-white">Name</h2>
                    <input type="text" name="name">    
                </label>
                <label class="mt-3">
                    <h2 class="h4 text-white">Email</h2>  
                    <input type="email" name="email">  
                </label>
                <label class="mt-3">
                    <h2 class="h4 text-white">Phone Number</h2>  
                    <input type="number" name="phone">  
                </label>
                <label class="mt-3">
                    <h2 class="h4 text-white">Password</h2>
                    <input type="password" name="password">
                </label>
                <label class="mt-3">
                    <h2 class="h4 text-white">Re-write password</h2>
                    <input type="password" name="password2">
                </label>
                <button type="submit" class="m-4 p-2 w-75 btn btn-outline-info">Register</button>
            </form>
        </div>    
    </div>
    
    `

let array = [login, register]
let index = 0

let btn = document.getElementById("button")
let art = document.getElementById("art")

window.addEventListener("DOMContentLoaded", () => {
    btn.innerHTML = "register"
    art.innerHTML = array[index]
})

btn.addEventListener("click", () => {
    index++
    if(index > array.length - 1) {
        index = 0
    }
    if(index === 0) {
        btn.innerHTML = "register"
    } if(index === 1) {
        btn.innerHTML = "login"
    }
    art.innerHTML = array[index]
})

</script>

