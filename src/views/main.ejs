<%- include("partials/header") %> 

<%- include("partials/nav") %> 

<h1>Main</h1>

<section>
    <table class="table">
        <thead>
            <tr>
                <th>Nº</th>
                <th>Title</th>
                <th>Price</th>
                <th>Description</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < products.length; i++) { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><%= products[i].title %> </td>
                    <td><%= products[i].price %> </td>
                    <td><%= products[i].description %> </td>
                    <td>
                        <a href="/cart/add/<%= products[i].id %> " class="btn btn-outline-success">Add to cart</a>
                        <a href="/product/view/<%= products[i].id %> " class="btn btn-outline-info">View product</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</section>


<section>
    <table class="table">
        <thead>
            <tr>
                <th>Nº</th>
                <th>Title</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < cart.length; i++) { %>
                <tr>
                    <td><%= i + 1 %> </td>
                    <td><%= cart[i].product %> </td>
                    <td></td>
                    <td>
                        <input type="number" name="quantity" value="1" id="">
                    </td>
                    <td>
                        <a href="#" class="btn btn-outline-danger">Delete from cart</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</section>

<%- include("partials/footer") %> 