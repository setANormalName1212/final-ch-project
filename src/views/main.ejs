<%- include("partials/header") %> 

<%- include("partials/nav") %> 

<h1 class="text-center mt-5 mb-5">Main</h1>

<section class="ms-5 me-5 border border-primary border-2 rounded">
    <table class="table">
        <thead>
            <tr>
                <th class="text-center">Nº</th>
                <th class="text-center">Title</th>
                <th class="text-center">Price</th>
                <th class="text-center">Description</th>
                <th class="text-center">Operation</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < products.length; i++) { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><%= products[i].title %> </td>
                    <td><%= products[i].price %> </td>
                    <td><%= products[i].description %> </td>
                    <td class="d-flex justify-content-center mb-4">
                        <a href="/cart/add/<%= products[i].id %> " class="btn btn-outline-success me-2">Add to cart</a>
                        <a href="/product/view/<%= products[i].id %> " class="btn btn-outline-info">View product</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</section>


<section class="ms-5 me-5 border border-primary border-2 rounded mt-5 mb-5">
    <table class="table">
        <thead>
            <tr>
                <th class="text-center">Nº</th>
                <th class="text-center">Title</th>
                <th class="text-center">Price</th>
                <th class="text-center">Quantity</th>
                <th class="text-center">Operations</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < cart.length; i++) { %>
                <tr>
                    <td><%= i + 1 %> </td>
                    <td><%= cart[i].title %> </td>
                    <td><%= cart[i].price %> </td>
                    <td>
                        <input type="number" name="quantity" value="1" id="value">
                    </td>
                    <td class="d-flex justify-content-center mb-4">
                        <a href="/cart/delete/<%= cart[i]._id %> " class="btn btn-outline-danger">Delete from cart</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <div class="d-flex justify-content-center mb-4">
        <a href="/cart/buy" class="btn btn-success">Buy Products</a>
    </div>
</section>

<%- include("partials/footer") %> 